# Dockerfile to make it easy running TensorFlow via Nvidia docker on EC2 g2 instance.

FROM nvidia/cuda:8.0-cudnn5-devel-ubuntu16.04

MAINTAINER sergei <sergei.0910@gmail.com>

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        software-properties-common \
        build-essential \
        curl \
        vim \
        git \
        net-tools \
        iputils-ping \
        netcat \
        libfreetype6-dev \
        libpng12-dev \
        libzmq3-dev \
        pkg-config \
        python \
        python-dev \
        python-numpy \
        python-wheel \
        python-mock \
        rsync \
        zip \
        unzip \
        g++ \
        zlib1g-dev \
        golang \
        fuse \
        rsyslog \
        && \
        apt-get clean && \
        rm -rf /var/lib/apt/lists/*

RUN curl -O https://bootstrap.pypa.io/get-pip.py && \
    python get-pip.py && \
    rm get-pip.py

RUN pip --no-cache-dir install \
        ipykernel \
        jupyter \
        matplotlib \
        scipy \
        sklearn \
        pandas \
        Pillow \
        h5py \
        sgf \
        futures \
        keras \
        awscli \
        && \
    python -m ipykernel.kernelspec

WORKDIR /root

# Copy cuDNN
COPY cudnn/cudnn-8.0-linux-x64-v5.1.solitairetheme8 /tmp/

RUN tar xzf /tmp/cudnn-8.0-linux-x64-v5.1.solitairetheme8 && \
    cp -a cuda/include/* /usr/local/cuda/include/ && \
    cp -a cuda/lib64/* /usr/local/cuda/lib64/

RUN pip --no-cache-dir install \
    http://storage.googleapis.com/tensorflow/linux/gpu/tensorflow_gpu-0.12.1-cp27-none-linux_x86_64.whl

# For CUDA profiling, TensorFlow requires CUPTI.
ENV LD_LIBRARY_PATH /usr/local/cuda/extras/CUPTI/lib64:$LD_LIBRARY_PATH

# Install goofys
RUN export GOPATH=/root/go && \
    go get -v github.com/kahing/goofys && \
    go install -v github.com/kahing/goofys

# Copy AWS credentials
RUN  mkdir /root/.aws
COPY credentials /root/.aws/credentials

# Force checkout by update
RUN echo "2017-03-21 18:05:00"

# Checkout repository 
RUN git clone https://github.com/hiropppe/RocAlphaGo.git && \
    cd RocAlphaGo && \
    git checkout develop2

# We just add a little wrapper script.
COPY bootstrap.sh /

CMD ["/bootstrap.sh"]

# Puts cluster info 
COPY cluster /

# Puts scripts for distributed training
COPY run_ps.sh /
COPY run_worker.sh /
COPY run_worker_for_init.sh /

RUN mkdir /tmp/logs
